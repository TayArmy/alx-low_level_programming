CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJ) $(NAME) *~ \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
