# Compiler
CC = gcc

# Source files
SRC = $(wildcard *.c)

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Programs
RM := rm -f

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re

# Dependencies
$(OBJ): m.h
